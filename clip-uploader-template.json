{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environmentName": {
            "type": "String"
        },
        "connectionString": {
            "defaultValue": "",
            "type": "String"
        },
        "queueName": {
            "defaultValue": "",
            "type": "String"
        },
        "blobContainerName": {
            "defaultValue": "",
            "type": "String"
        },
        "clipsServiceEndpoint": {
            "defaultValue": "",
            "type": "String"
        }
    },
    "variables": {
        "logAnalyticsWorkspaceName": "[concat('logs-', parameters('environmentName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2020-03-01-preview",
            "name": "[variables('logAnalyticsWorkspaceName')]",
            "location": "eastus",
            "properties": {
                "retentionInDays": 30,
                "features": {
                    "searchVersion": 1
                },
                "sku": {
                    "name": "PerGB2018"
                }
            }
        },
        {
            "type": "Microsoft.App/managedEnvironments",
            "apiVersion": "2022-03-01",
            "name": "[parameters('environmentName')]",
            "location": "eastus",
            "properties": {
                 "appLogsConfiguration":{
                    "destination": "log-analytics",
                    "logAnalyticsConfiguration": {
                        "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces/', variables('logAnalyticsWorkspaceName')), '2020-03-01-preview').customerId]",
                        "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces/', variables('logAnalyticsWorkspaceName')), '2020-03-01-preview').primarySharedKey]"
                    }
                }
            }
        },
        {
            "name": "clipuploader",
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-03-01",
            "kind": "containerapp",
            "location": "East US",
            "dependsOn": [
                "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]"
            ],
            "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]",
                "configuration": {
                    "activeRevisionsMode": "single",
                    "secrets": [
                        {
                            "name": "dbconnection",
                            "value": "[parameters('connectionString')]"
                        },
                        {
                            "name": "domain",
                            "value": "defaultdomain"
                        },
                        {
                            "name": "audience",
                            "value": "defaultAudience"
                        },
                        {
                            "name": "clientid",
                            "value": "defualtClientId"
                        },
                        {
                            "name": "clientsecret",
                            "value": "defaultClientSecret"
                        },
                        {
                            "name": "tokenendpoint",
                            "value": "defaulttokenEndpoint"
                        },
                        {
                            "name": "blobcontainername",
                            "value": "[parameters('blobContainerName')]"
                        },
                        {
                            "name": "queuename",
                            "value": "[parameters('queueName')]"
                        },
                        {
                            "name": "clipsserviceendpoint",
                            "value": "[parameters('clipsServiceEndpoint')]"
                        }
                    ],
                    "ingress": {
                        "external": true,
                        "targetPort": 80,
                        "allowInsecure": false,
                        "traffic": [
                            {
                                "latestRevision": true,
                                "weight": 100
                            }
                        ]
                    }
                },
                "template": {
                    "containers": [
                        {
                            "image": "kbongcas/clipdat-clipuploader:dev",
                            "name": "clipuploader",
                            "resources": {
                                "cpu": 0.5,
                                "memory": "1.0Gi"
                            },
                            "env": [
                                {
                                    "name": "AzureStorageConnectionString",
                                    "secretref": "dbconnection"
                                },
                                {
                                    "name": "Auth0Domain",
                                    "secretRef": "domain"
                                },
                                {
                                    "name": "Auth0Audience",
                                    "secretRef": "audience"
                                },
                                {
                                    "name": "Auth0ClientId",
                                    "secretRef": "clientid"
                                },
                                {
                                    "name": "Auth0ClientSecret",
                                    "secretRef": "clientsecret"
                                },
                                {
                                    "name": "Auth0TokenEndpoint",
                                    "secretRef": "tokenendpoint"
                                },
                                {
                                    "name": "BlobContainerName",
                                    "secretRef": "blobcontainername"
                                },
                                {
                                    "name": "QueueName",
                                    "secretRef": "queuename"
                                },
                                {
                                    "name": "ClipsServiceEndpoint",
                                    "secretRef": "clipsserviceendpoint"
                                }
                            ]
                        }
                    ],
                    "scale": {
                        "minReplicas": 0,
                        "maxReplicas": 5,
                        "rules": [
                            {
                                "name": "http-rule",
                                "http": {
                                    "metadata": {
                                        "concurrentRequests": "5"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}